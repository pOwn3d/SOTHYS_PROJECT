{% extends 'base.html.twig' %}

{% block title %}Coedi Sothys - Réinitialisation mot de passe{% endblock %}

{% block body %}

    <main class="main" id="top">
        <div class="container-fluid">
            <div class="row min-vh-100 bg-100">
                <div class="col-6 d-none d-lg-block position-relative">
                    <div class="bg-holder"
                         style="background-image:url({{ asset('assets/images/bg-home.jpg') }});background-position: 50% 20%;">
                    </div>
                </div>
                <div class="col-sm-10 col-md-6 px-sm-0 align-self-center mx-auto py-5">
                    <div class="row justify-content-center g-0">
                        <div class="col-lg-9 col-xl-8 col-xxl-6">
                            <div class="card">
                                <div class="card-header text-center p-2"><img
                                            src="{{ asset('assets/images/logo_register.png') }}"/></div>
                                <div class="card-body p-4">
                                    {{ form_start(resetForm) }}
                                    <div class="row flex-between-center">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label for="email">Nouveau mot de passe</label>
                                                {{ form_row(resetForm.plainPassword.first, {'label' : false,  'attr' : {'placeholder' : 'Nouveau mot de passe',  'class' : 'form-control'  }}) }}
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Confirmation nouveau mot de passe</label>
                                                {{ form_row(resetForm.plainPassword.second, {'label' : false,  'attr' : {'placeholder' : 'Confirmer nouveau mot de passe',  'class' : 'form-control'  }}) }}
                                            </div>
                                        </div>
                                        <div class="col-12 d-flex justify-content-end pt-2">
                                            <button class="btn btn-primary mx-auto"
                                                    type="submit">Réinitialiser
                                            </button>
                                        </div>
                                    </div>
                                    {{ form_end(resetForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


{% endblock %}
