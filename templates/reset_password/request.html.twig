{% extends 'base.html.twig' %}
{% block title %}Réinitialisation de votre mot de passe{% endblock %}
{% block body %}

    <section class="section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-9">
                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    {% include 'flash_messages.html.twig' %}
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="title--border ">
                                <h2>Réinitialiser mon compte</h2>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form--login-register-wrapper">
                                <form action="{{ path('app_forgot_password_request') }}" method="POST" class="form form--login-register">
                                    <p class="fs-sm">Changez votre mot de passe en trois étapes faciles. Cela aide à protéger votre nouveau mot de passe</p>
                                    <ul class="list-unstyled fs-sm pb-1 mb-4">
                                        <li><span class="">1.</span>Remplissez votre adresse e-mail ci-dessous.</li>
                                        <li><span class="">2.</span>Nous vous enverrons un lien temporaire par e-mail.</li>
                                        <li><span class="">3.</span>Utilisez le lien pour changer votre mot de passe sur notre site Web sécurisé.</li>
                                    </ul>
                                    {{ form_start(requestForm) }}
                                    <div>
                                        <label class="form-label" for="recovery-email">Entrez votre adresse email</label>
                                        {{ form_row(requestForm.email, {'label' : false,  'attr' : {'placeholder' : 'E-mail',  'class' : 'form-control', 'name' : 'recovery-email'  }}) }}
                                    </div>
                                    <div class="form__item flex flex--center" style="padding-top:25px;">
                                        <span class="button button--primary-fill button--submit">
                    <input type="submit" value="Obtenir un nouveau mot de passe">
                                       </span>
                                    </div>
                                    {{ form_end(requestForm) }}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
