{% extends 'base.html.twig' %}

{% block title %}Produits : {% endblock %}

{% block body %}
    <div id="content" role="main">
        <section class="section section--product-information">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-12 col-lg-7 col-fullsize--sm">
                        <div class="carousel carousel--pagination carousel--nav" data-perpage="1">
                            <div class="carousel__inner" style="overflow: hidden; direction: ltr;">
                                <div style="width: 3325px; transition: all 250ms ease-out 0s; transform: translate3d(0px, 0px, 0px);">
                                    <div style="float: left; width: 14.2857%;">
                                        <div class="carousel__item">
                                            <picture>
                                                <!-- Portrait Phones -->
                                                <img src="http://placekitten.com/480/480" alt="image product">
                                            </picture>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-12 col-lg-5">
                        <span class="text--category">{{ product.gamme.labelFR }}</span>
                        <h1>{{ product.labelFR }}</h1>
                        <div>
                            <span class="complement">{{ product.capacityFR }}</span>
                        </div>
                        <ul class="features">
                            <li><strong>Lorem</strong><span>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Asperiores dicta eius ipsa maxime minus officia quo sequi sit temporibus? Culpa debitis doloremque ea fugit impedit incidunt ipsam, non provident sapiente?</span></li>
                        </ul>
                        <div class="button__wrapper">
                            <a href="#" class="button button--primary-fill button--small">Acheter</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}
