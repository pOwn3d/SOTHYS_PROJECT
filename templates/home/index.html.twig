{% extends 'base.html.twig' %}
{% block title %}{{'Home' | trans}}{% endblock %}
{% block body %}

    <div class="container">
        <h2> {{'customer.area' | trans}}</h2>
        <div class="promo-container">
            <h2> {{'promotions' | trans}}</h2>
            <hr>
            {% if promos != '' %}
            <ul class="promo">
                {% for promo in promos %}
                <li class="list-style-none"><a href="#" class="button button--secondary"> {{promo.name}} <br> {{promo.start | date('d/m/Y')}}-{{promo.end | date('d/m/Y')}}  </a></li>
                {% endfor %}
            </ul>
            {% else %}
                <h4>{{ 'Promotion.no.display' | trans }}</h4>
            {% endif %}
        </div>
    </div>
{% endblock %}
